<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/theme_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/win8_theme_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageview_win8_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:scaleType="matrix"
                        android:src="@mipmap/win8_them_img_1"/>

                    <ImageView
                        android:id="@+id/imageview_win8_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:scaleType="matrix"
                        android:src="@mipmap/win8_them_img_2"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageview_win8_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:scaleType="matrix"
                    android:src="@mipmap/win8_them_img_3"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_win8_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:scaleType="matrix"
                android:src="@mipmap/win8_them_img_4"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_win8_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:scaleType="matrix"
                    android:src="@mipmap/win8_them_img_5"/>

                <ImageView
                    android:id="@+id/imageview_win8_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:scaleType="matrix"
                    android:src="@mipmap/win8_them_img_5"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dip"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/win8_download_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/win8_theme_selector_download"/>

                    <ImageView
                        android:id="@+id/win8_clear_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/win8_theme_selector_clear"/>

                    <ImageView
                        android:id="@+id/win8_set_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/win8_theme_selector_set"/>

                    <ImageView
                        android:id="@+id/win8_add_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/win8_theme_selector_add"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>